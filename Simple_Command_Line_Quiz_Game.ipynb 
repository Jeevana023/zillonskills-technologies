      "cell_type": "code",
      "source": [
        "def run_quiz():\n",
        "    \"\"\"\n",
        "    Runs a simple command-line quiz game.\n",
        "    Users get 2 marks for a correct answer and -1 for a wrong answer.\n",
        "    \"\"\"\n",
        "    questions = [\n",
        "        {\n",
        "            \"question\": \"What is the capital of France?\",\n",
        "            \"answer\": \"Paris\"\n",
        "        },\n",
        "        {\n",
        "            \"question\": \"Which planet is known as the Red Planet?\",\n",
        "            \"answer\": \"Mars\"\n",
        "        },\n",
        "        {\n",
        "            \"question\": \"What is the largest ocean on Earth?\",\n",
        "            \"answer\": \"Pacific Ocean\"\n",
        "        },\n",
        "        {\n",
        "            \"question\": \"Who painted the Mona Lisa?\",\n",
        "            \"answer\": \"Leonardo da Vinci\"\n",
        "        },\n",
        "        {\n",
        "            \"question\": \"What is the chemical symbol for water?\",\n",
        "            \"answer\": \"H2O\"\n",
        "        }\n",
        "    ]\n",
        "\n",
        "    score = 0\n",
        "    print(\"--- Welcome to the Quiz Game! ---\")\n",
        "    print(\"Answer the following questions to test your knowledge.\")\n",
        "    print(\"Correct answer: +2 points | Wrong answer: -1 point\\n\")\n",
        "\n",
        "    for i, q_data in enumerate(questions):\n",
        "        print(f\"Question {i + 1}: {q_data['question']}\")\n",
        "        user_answer = input(\"Your answer: \").strip()\n",
        "\n",
        "        if user_answer.lower() == q_data['answer'].lower():\n",
        "            print(\"Correct!\")\n",
        "            score += 2\n",
        "        else:\n",
        "            print(f\"Wrong! The correct answer was: {q_data['answer']}\")\n",
        "            score -= 1\n",
        "        print(f\"Current Score: {score}\\n\")\n",
        "\n",
        "    print(\"--- Quiz Finished! ---\")\n",
        "    print(f\"Your final score is: {score} points\")\n",
        "    print(\"----------------------\")\n",
        "\n",
        "if __name__ == \"__main__\":\n",
        "    run_quiz()"
      ],
